generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DELEGADO
  DELEGADO_ASSISTENTE
  USUARIO
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  rg        String   @unique
  role      Role
  division  String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}
