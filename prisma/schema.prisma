generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  nome            String
  email           String   @unique
  senha           String
  rg              String
  telefone        String?
  dataNascimento  DateTime
  divisao         String
  cargo           String
  tipoUsuario     String
  status          String
  criadoEm        DateTime @default(now())

  pontos          Ponto[]
  promocoes       Promocao[]
  punicoes        Punicao[]
  rsos            RSO[]
}

model Ponto {
  id        Int      @id @default(autoincrement())
  data      DateTime
  entrada   DateTime?
  saida     DateTime?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Promocao {
  id            Int      @id @default(autoincrement())
  cargoAnterior String
  novoCargo     String
  motivo        String
  autor         String
  data          DateTime @default(now())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
}

model Punicao {
  id        Int      @id @default(autoincrement())
  tipo      String
  motivo    String
  duracao   String?
  autor     String
  data      DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model RSO {
  id             Int      @id @default(autoincrement())
  titulo         String
  dataOcorrencia DateTime
  descricao      String
  local          String?
  envolvidos     String?
  guarnicao      String?
  criadoEm       DateTime @default(now())
  autorId        Int
  autor          User     @relation(fields: [autorId], references: [id])
}
